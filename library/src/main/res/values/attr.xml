<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="KFlowLayout">

        <!--一行的最大个数-->
        <attr name="kf_line_max_num" format="integer|reference">
        </attr>
        <!--水平的间距-->
        <attr name="kf_horizontalSpacing" format="dimension|reference"></attr>

        <!--竖着的间距-->
        <attr name="kf_verticalSpacing" format="dimension|reference"></attr>

        <!--是否自动调整其宽度-->
        <attr name="kf_adjust" format="boolean|reference"></attr>

        <!--分割线-->
        <attr name="divider"></attr>
        <attr name="kf_horizontalDivider" format="reference"></attr>
        <attr name="kf_verticalDivider" format="reference"></attr>

        <!--最后一行的填充的宽度-->
        <attr name="kf_last_line_difference" format="reference|integer"></attr>



    </declare-styleable>
</resources>